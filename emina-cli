function Server3Streamer(){
	Streamer3=$(
		wget -qO- "$LinkForServer3" | \
		sed -n '/<div class="dowload">/,/<\/div>/p' | \
		grep -o "https[^'\"<>]*" | \
		grep -e 'fplayer' -e 'fembed' | \
		sed -n 1p
	)
	if [[ -z "$Streamer3" ]]; then
		ErrorFunc3d "Server Not Found"
		exit 4
	elif [[ $(ls) =~ $FILEVIDNAME ]]; then
		ErrorFunc2b "You Already Downloaded the Episode"
		exit 2
	fi
	RootURL=$(
		echo "$Streamer3" | \
		awk -F[/] '{print $3}' | \
		sed 's|^|https://|g'
	)
	GetAPIServ1=$(
		wget -qO- "$Streamer3" | \
		grep '$.post' | \
		awk -F["'"] '{print $2}' | \
		sed "s|/api|$RootURL/api|g"
	)
	DirectDownLinksList=$(
		curl -s -X POST -e "$RootURL" "$GetAPIServ1" | \
		grep -o "https:[^'\"<>]*" | \
		grep 'fvs' | \
		sed 's/[\]//g' | \
		tac | \
		xargs
	)
	for LISTER in $DirectDownLinksList; do
		ConGrep=$(
			curl -e "$RootURL" -LksI "$LISTER" | \
			grep -i Content-Length | \
			awk '{print $2}' | \
			tr -dc '[:print:]'
		)
		if [[ -z "$ConGrep" ]]; then
			ConGrep="1"
		fi
		if [[ "$ConGrep" -gt "225000" ]]; then
			QualitySTREAM="$LISTER"
			break
		else
			ErrorCatchFunc "Kek.. Server Down, so Im gonna do my Job to find another server"
		fi
	done
	if [[ -z "$QualitySTREAM" ]]; then
		ErrorFunc5d "Server Failed to Fetch"
		exit 4
	fi
}

function StreamGetLinkDefault(){
	GetDATA=$(
		wget -qO- "$LinkFor" | \
		sed -n '/<li class="linkserver".*>/,/<\/li>/p;/<li  class="linkserver".*>/,/<\/li>/p' | \
		sed 's/^ *//g' | \
		uniq | \
		grep -o "https[^'\"<>]*" | \
		grep 'embedplus' | \
		recode html...utf8
	)
	if [[ -z $GetDATA ]]; then 
		ErrorFunc3d "Failed to get data"
		exit 4
	fi
	GetSTREAM=$(
		wget -qO- "$GetDATA" | \
		grep 'sources' | \
		grep -o "https[^'\"<>]*" | \
		head -1
	)
	if [[ $QualityPicker =~ [H|h]igh ]]; then
		QualitySTREAM="${GetSTREAM//.m3u8/.1080.m3u8}"
		if [[ -z $QualitySTREAM ]]; then
			ErrorCatchFunc "Kek.. Server Down, so Im gonna do my Job to find another server"
			QualitySTREAM="${GetSTREAM//.m3u8/.720.m3u8}"
		fi
	elif [[ $QualityPicker =~ [L|l]ow ]]; then
		QualitySTREAM="${GetSTREAM//.m3u8/.480.m3u8}"
	fi
}

# Used to Get the Quality
function QualityPicker(){
	if [[ $QualityPicker = "" ]]; then
		QualityPicker="high"
	elif [[ ! $QualityPicker =~ ^([H|h]igh|[L|l]ow*)$ ]]; then
		ErrorFunc2a "Undefined Option, Just pick between (High, Low) Server"
		sleep 2
		unset QualityPicker
		OverAllInputs
	fi
	case $QualityPicker in
		high|High)
			if [[ "$server" =~ $HHSS ]]; then
				ParseToHist "Download"
				if [[ "$server" == "default" ]]; then
					MainMenuMessage
					DefaultQuality "$DirectDownLinksList"
					exit 0
				elif [[ "$server" == "1" ]]; then
					MainMenuMessage
					Server1 "$MainDirectLS1"
					exit 0
				elif [[ "$server" == "2" ]]; then
					MainMenuMessage
					Server2 "$MainDirectLS2"
					exit 0
				elif [[ "$server" == "3" ]]; then
					MainMenuMessage
					Server3 "$MainDirectLS3"
					exit 0
				fi
			else
				ErrorFunc1e "Invalid Server Value..."
				exit 5
			fi
		;;
	low|Low)
		if [[ "$server" =~ $HHSS ]];then
			if [[ $server == "default" ]]; then
				LowQuality
				exit 0
			elif [[ $server == "1" ]]; then
				Server1Low "$MainDirectLS1"
			else
				ErrorFunc2e "Low Quality only Available in Default Server and Server 1"
				exit 5
			fi
		fi
	esac
}

#######################################
#         Misc Functions         #
#######################################

# For -i flag
function SearchArgsInf(){
	KeyWord=$1
	GetAnimeNameInf=$(
	{
		wget -qO- "https://gogoanime.cm/search.html?keyword=$KeyWord"
		wget -qO- "https://gogoanime.cm/search.html?keyword=$KeyWord&page=2"
	} | \
	sed -n '/<p class="name">/,/<\/p>/p' | \
	grep -o '<a.*href=".*".*title=".*">' | \
	grep -o 'title=".*"' | \
	awk -F['"'] '{print $2}'
	)
	echo "$GetAnimeNameInf" | \
	while read -r wiffles; do
		if [[ "${#wiffles}" -gt 47 ]]; then
			echo "${wiffles:0:47}..${wiffles:(${#wiffles}-10):${#wiffles}}"
		else 
			echo "${wiffles}"
		fi
	done | \
	nl -w1 -s"+ " | \
	printTable '+' "Num+Anime Name\n$(awk '{print $0}')"
	read -rp "$(InputSign 'Enter a Number: ')" SelectedQuery
	while ! [[ $SelectedQuery =~ $REGNUMBERONLY ]]; do
		ErrorFunc1a "The input must be in Digit/Number"
		read -rp "$(InputSign 'Enter a Number: ')" SelectedQuery
	done
	QuerySelectLink=$(
		wget -qO- "https://gogoanime.cm/search.html?keyword=$KeyWord" | \
		sed -n '/<p class="name">/,/<\/p>/p' | \
		grep -o "/category/[^'\"<>]*" | \
		sed 's|/category/|https://gogoanime.cm/category/|g' | \
		sed -n "$SelectedQuery"p
	)
	QuerySelectLinkLoad=$(
		wget -qO- "$QuerySelectLink"
	)
	TyPe=$(
		echo "$QuerySelectLinkLoad" | \
		sed -n '/<p class="type">/,/<\/p>/p' | \
		grep -o '.*/sub-category/.*' | \
		awk -F['"'] '{print $4}'
	)
	GenRe=$(
		echo "$QuerySelectLinkLoad" | \
		sed -n '/<p class="type">/,/<\/p>/p' | \
		grep -o '.*/genre/.*' | \
		grep -o 'title="[a-zA-Z0-9]*"' | \
		awk -F['"'] '{print $2}' | \
		xargs | \
		sed 's| |, |g'
	)
	StaTus=$(
		echo "$QuerySelectLinkLoad" | \
		sed -n '/<p class="type">/,/<\/p>/p' | \
		sed -n '/<span>Status:/,/<\/span>/p' | \
		grep -o 'title=".*".*>' | \
		grep -o '>.*<' | \
		tr -d "<>"
	)
	ReleaseDate=$(
		echo "$QuerySelectLinkLoad" | \
		sed -n '/<p class="type">/,/<\/p>/p' | \
		grep -oE "20[0-2][0-9]|199[0-9]" | \
		uniq
	)
	ParseToHist "Info"
	echoterd "Anime Information:"
	echoterd "Type: $TyPe"
	echoterd "Genre: $GenRe"
	echoterd "Released: $ReleaseDate"
	echoterd "Status: $StaTus"
	exit 0
}

# For Printing History in Table
function ParseToHist(){
	ModeSpecification=$1
	QualityPickerEd="${QualityPicker^}"
	if [[ $QueryDetect == "" ]]; then
		AnimeNameGetParse=$(
			echo "$GetAnimeNameInf" | \
			sed -n "$SelectedQuery"p
		)
	else
		AnimeNameGetParse=$(
			echo "$QueryDetect" | \
			sed -n "$SeriesSelected"p
		)
	fi
	ChopCharacters=$(
		echo "$AnimeNameGetParse" | \
		while read -r wiffles; do
			if [[ "${#wiffles}" -gt 34 ]]; then
				echo "${wiffles:0:34}..${wiffles:(${#wiffles}-10):${#wiffles}}"
			else 
				echo "${wiffles}"
			fi
		done
	)
	if [[ $EpisodeSelected == "" ]]; then
		echo "${ChopCharacters}#None#${ModeSpecification}#None" >> /etc/emina/.hist
	else
		echo "${ChopCharacters}#${EpisodeSelected}#${ModeSpecification}#${QualityPickerEd}" >> /etc/emina/.hist
	fi
}


#######################################
#         Streaming Setups         #
#######################################

function CallWatchSequence(){
	EPS="$SerNameFile-episode-$EpisodeSelected"
	FILEVIDNAME="$SerNameFile-EPI$EpisodeSelected.mp4"
}

function WatchGetData(){
	CallWatchSequence
	CheckersIfAvailable
	if [[ $QualityPicker = "" ]]; then
		QualityPicker="high"
	elif [[ ! $QualityPicker =~ ^([H|h]igh|[L|l]ow*)$ ]]; then
		ErrorFunc2a "Undefined Option, Bruh just pick between (High, Low) Server"
		sleep 2
		unset QualityPicker
		OverAllInputs
	fi
	if [[ "$server" =~ $HHSS ]];then
		if [[ $server == "default" ]]; then
			StreamGetLink
		elif [[ $server == "3" ]]; then
			Server3Streamer
		else
			ErrorFunc2e "Watch Mode only Available in Default and Server 3"
			exit 5
		fi
	else
		ErrorFunc1e "Invalid Server Value..."
		exit 5
	fi
	ParseToHist "Watch"
	setsid -f mpv --http-header-fields="Referer: $QualitySTREAM" "$QualitySTREAM" >/dev/null 2>&1
}

function WatchAnime(){
	while true; do
		WatchGetData "$EpisodeSelected"
		clear
		AnimePlaying=$(
			echo "$QueryDetect" | \
			sed -n "$SeriesSelected"p | \
			while read -r wiffles; do
				if [[ ${#wiffles} -gt 47 ]]; then
					echo "${wiffles:0:47}..${wiffles:(${#wiffles}-10):${#wiffles}}"
				else 
					echo "${wiffles}"
				fi
			done
		)
		echoterd "Now Playing: $AnimePlaying [$EpisodeSelected/$LastEpiList]"
		NumberingFunc "1" "Next Episode"
		NumberingFunc "2" "Back to Previous Episode"
		NumberingFunc "3" "Select Episode"
		NumberingFunc "4" "Search For Another Anime"
		NumberingFunc "5" "Download Instead"
		NumberingFunc "6" "Exit the Program"
		read -rp "$(InputSign 'Pick a Number: ')" PickedSelected
		while [[ $PickedSelected -gt 6 ]]; do
			ErrorFunc3a "Undefined Number Pick"
			read -rp "$(InputSign 'Pick a Number: ')" PickedSelected
		done
		case $PickedSelected in
			1)
				EpisodeSelected=$((EpisodeSelected + 1))
				;;
			2)
				EpisodeSelected=$((EpisodeSelected - 1))
				;;
			3)
				unset EpisodeSelected
				OverAllInputs
				continue
				;;
			4)
				unset AnimeSearch SeriesSelected
				OverAllInputs
				continue
				;;
			5)
				unset WatchAnime
				DownloadUtilityForRange
				return
				;;
			6)
				exit 0
				;;
			esac
	done
}

#######################################
#            Args Parsers             #
#######################################

function ParseArgs(){
	while getopts ":dHDhvi:s:e:q:m:t:p:" opt; do
		case "${opt}" in
			d)
				if [[ $EUID -ne 0 ]]; then
					ErrorFunc1g 'Give this script Sudo Permission to Delete files'
					InfoFunc "Run: sudo $(basename "$0") -d"
					exit 7
				fi
				unset modeload infarg AnimeSearch EpisodeSelected QualityPicker
				tput reset
				FileDir="$(dirname "$(readlink -f "$0")")/$(basename "$0")"
				rm "$FileDir"
				rm -r /etc/emina
				for barmod in $(seq 1 100); do
					sleep 0.001
					ProgressBarModifiedUnin "${barmod}" 100
				done
				printf '\n'
				InfoFunc "Uninstalling Completed!"
				exit 0
				;;
			h)
				unset modeload infarg AnimeSearch EpisodeSelected QualityPicker
				ErrorHelp | column -ts '#' | sed -E 's|[[:space:]]{30}||g'
				exit 0
				;;
			H)
				unset modeload infarg AnimeSearch EpisodeSelected QualityPicker
				echo "History File" | CenteredGrid
				echo "This is where all your Recent Searches/Downloads Stored" | CenteredGrid
				 printTable '#' "Anime#EP#Mode#Quality\n$(cat /etc/emina/.hist)" | CenteredGrid
				exit 0
				;;
			D)
				if [[ $EUID -ne 0 ]]; then
					ErrorFunc1g 'Give this script Sudo Permission to Delete files'
					InfoFunc "Run: sudo $(basename "$0") -D"
					exit 7
				fi
				unset modeload infarg AnimeSearch EpisodeSelected QualityPicker
				sed -i '/^/d' /etc/emina/.hist
				exit 0
				;;
			v)
				unset modeload infarg AnimeSearch EpisodeSelected QualityPicker
				echo "v0.6.7 Beta (Currently on Beta Test, Improved Version)"
				exit 0
				;;
			m)
				modeload=${OPTARG}
				case $modeload in
					watch)
						if [[ -z "$(command -v mpv)" ]]; then
							ErrorFunc1b "MPV is not installed. MPV is needed for Playing Videos"
							ErrorHelp | column -ts '#' | sed -E 's|[[:space:]]{30}||g'
							exit 2
						fi
						WatchAnime="1"
						;;
					dub)
						DUBMODE="1"
						;;
					*)
						ErrorFunc1f "Value was not Valid"
						ErrorHelp | column -ts '#' | sed -E 's|[[:space:]]{30}||g'
						exit 6
				esac
				;;
			i)
				if [[ ${OPTARG} == "" ]]; then
					ErrorFunc2f "Search Query Must not be empty"
					ErrorHelp | column -ts '#' | sed -E 's|[[:space:]]{30}||g'
					exit 6
				fi
				case $OPTARG in
					-*)
						ErrorFunc3f "Search Query is Not Specified"
						ErrorHelp | column -ts '#' | sed -E 's|[[:space:]]{30}||g'
						exit 6
						;;
					*)
						infarg=${OPTARG}
						SearchArgsInf "$infarg"
						;;
				esac
				exit 0
				;;
			s)
				if [[ ${OPTARG} == "" ]]; then
					ErrorFunc2f "Search Query Must not be empty"
					ErrorHelp | column -ts '#' | sed -E 's|[[:space:]]{30}||g'
					exit 6
				fi
				case $OPTARG in
					-*)
						ErrorFunc3f "Search Query is Not Specified"
						ErrorHelp | column -ts '#' | sed -E 's|[[:space:]]{30}||g'
						exit 6
						;;
					*)
						AnimeSearch=${OPTARG}
						;;
				esac
				;;
			e)
				if [[ ${OPTARG} == "" ]]; then
					ErrorFunc3f "Episode Number Must not be empty"
					ErrorHelp | column -ts '#' | sed -E 's|[[:space:]]{30}||g'
					exit 6
				fi
				case $OPTARG in
					-*)
						ErrorFunc3f "Episode Number is Not Specified"
						ErrorHelp | column -ts '#' | sed -E 's|[[:space:]]{30}||g'
						exit 6
						;;
					*)
						EpisodeSelected=${OPTARG}
						;;
				esac
				;;
			q)
				if [[ ${OPTARG} == "" ]]; then
					ErrorFunc3f "Quality Value Must not be empty"
					ErrorHelp | column -ts '#' | sed -E 's|[[:space:]]{30}||g'
					exit 6
				fi
				case $OPTARG in
					high|High|low|Low)
						QualityPicker=${OPTARG}
						;;
					*)
						ErrorFunc1f "${OPTARG} is a Invalid Quality"
						ErrorHelp | column -ts '#' | sed -E 's|[[:space:]]{30}||g'
						exit 6
						;;
				esac
				;;
			t)
				if [[ ${OPTARG} == "" ]]; then
					ErrorFunc3f "Quality Value Must not be empty"
					ErrorHelp | column -ts '#' | sed -E 's|[[:space:]]{30}||g'
					exit 6
				fi
				case $OPTARG in
					default|1|2|3|4)
						server=${OPTARG}
						;;
					*)
						ErrorFunc1f "${OPTARG} is a Invalid Server Number"
						ErrorHelp | column -ts '#' | sed -E 's|[[:space:]]{30}||g'
						exit 6
						;;
				esac
				;;
			p)
				if [[ ${OPTARG} == "" ]]; then
					ErrorFunc3f "Selected Value Must not be empty"
					ErrorHelp | column -ts '#' | sed -E 's|[[:space:]]{30}||g'
					exit 6
				fi
				case $OPTARG in
					[0-9]*)
						SeriesSelected=${OPTARG}
						;;
					*)
						ErrorFunc3a "${OPTARG} is Must be Number"
						ErrorHelp | column -ts '#' | sed -E 's|[[:space:]]{30}||g'
						exit 1
						;;
				esac
				;;
			\?)
				ErrorFunc4f "[ ${OPTARG}: is not valid Argument ]"
				ErrorHelp | column -ts '#' | sed -E 's|[[:space:]]{30}||g'
				exit 6
				;;
			:)
				ErrorFunc4f "[ -${OPTARG} Argument must have a Value ]"
				ErrorHelp | column -ts '#' | sed -E 's|[[:space:]]{30}||g'
				exit 6
				;;
		esac
	done
	shift $((OPTIND -1))
}

function ErrorHelp(){
	echo -e 'Usage: emina-cli -i "<search query>"'
	echo -e 'Usage: emina-cli -s "<search query>" -e "[Episode]" -q "High" -m [Mode]'
	echo -e 'Usage: emina-cli [arguments...]'
	echo -e '͐'
	echo -e "Program that allows you to download and watch anime via command line."
	echo -e '͐'
	echo -e "Options:"
	echo -e "   -d#: Uninstall Script with its Config Files"
	echo -e "   -v#: Show the version of the script"
	echo -e '   -m "[mode]"#: Specify Mode'
	echo -e '   -s "<search query>"#: Search Anime'
	echo -e '   -e "[episode]"#: Number of Episode'
	echo -e '   -q "[quality]"#: Quality of Video'
	echo -e '   -p "[number]"#: Specify Picks in Anime Selection'
	echo -e '   -t "[server]"#: Specify Server (default, 1, 2, 3)'
	echo -e "   -h#: Show this help"
	echo -e '͐'
	echo -e "Misc:"
	echo -e '   -i "<search query>"#: Search Anime and Print Info'
	echo -e '   -H#: Print History File'
	echo -e '   -D#: Clear History File'
	echo -e '͐'
	printf 'You can change Servers or Download Method by changing the value of the "server or utility" variable in ' && tput setab 8 && printf '/etc/emina/down.conf' && tput sgr 0
	echo -e '͐'
	echo -e '͐'
	printf 'Option "-d" is to Uninstall this Script with ' && tput setab 8 && printf '/etc/emina/down.conf & /etc/emina/eminavars' && tput sgr 0 && echo -e ' But it wont delete all the prerequisites/dependencies that installed by this script (it can be used for other scripts)..'
	echo -e '͐'
	echo 'Option "-t" will specify which server will used to download the File, if this argument presented it will ignore the Config File where the automation stored to set the server..'
	echo -e '͐'
	echo 'Option "-m [dub|watch]" will change Mode, (Default: None). Watch mode is not tested yet, Stable Release Soon..'
	echo -e "\tdub#: Switch to Dub Mode (Dubbed Anime Only)"
	echo -e "\twatch#: Switch to Watch Mode, Instead of Downloading the Episode it will open the Stream for you using (MPV)"
	echo -e '͐'
	echo 'The "-q" flag ignored when downloading Range of Episodes (Default: High)'
	echo -e '͐'
}

#######################################
#           Main Functions            #
#######################################

function MainFunction(){
	OverAllInputs
	DownloadUtilityForRange
}

if [[ -n $(command -v apt; command -v apt-get) ]]; then
	InstallPrerequisitesDebBased
	StallConfigs
elif [[ -n $(command -v dnf; command -v yum) ]]; then
	InstallPrerequisitesRedHatBased
	StallConfigs
else
	StallConfigs
	PackageChecks
fi
ParseArgs "$@"
MainFunction